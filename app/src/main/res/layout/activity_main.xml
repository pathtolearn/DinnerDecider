<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese Food"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/selectedFoodText"
            android:fontFamily="@font/muli_bold" android:textSize="30sp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@drawable/dd_logo"
            android:id="@+id/imageView" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Decide!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decideButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="18sp"
            android:textColor="@android:color/background_light" android:background="@color/colorPrimaryDark"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="add new food"
            android:ems="10"
            android:id="@+id/addFoodText" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodButton" android:hint="Add new food"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Add Food"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFoodButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="48dp" app:layout_constraintBottom_toTopOf="@+id/decideButton"
            android:background="@color/colorPrimaryDark" android:textColor="@android:color/background_light"/>


</android.support.constraint.ConstraintLayout>